FROM nginx:alpine

# Install openssl for generating self-signed certs if needed
RUN apk add --no-cache openssl

# Copy client files directly into the image
COPY client/ /usr/share/nginx/html/

# Create SSL directories (certs handled by entrypoint)
RUN mkdir -p /etc/ssl/certs /etc/ssl/private

# Copy entrypoint script
COPY docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

# Set app.html as the default index with HTTP and HTTPS support + YouTube proxy
RUN echo 'server { \
    listen 80; \
    server_name localhost; \
    root /usr/share/nginx/html; \
    index app.html index.html; \
    location / { \
        try_files $uri $uri/ /app.html; \
    } \
    location /api/youtube { \
        proxy_pass http://youtube-proxy:8766/extract; \
        proxy_http_version 1.1; \
        proxy_set_header Host $host; \
        proxy_set_header X-Real-IP $remote_addr; \
    } \
} \
server { \
    listen 443 ssl; \
    server_name localhost; \
    root /usr/share/nginx/html; \
    index app.html index.html; \
    ssl_certificate /etc/ssl/certs/fullchain.pem; \
    ssl_certificate_key /etc/ssl/private/privkey.pem; \
    ssl_protocols TLSv1.2 TLSv1.3; \
    ssl_ciphers HIGH:!aNULL:!MD5; \
    location / { \
        try_files $uri $uri/ /app.html; \
    } \
    location /api/youtube { \
        proxy_pass http://youtube-proxy:8766/extract; \
        proxy_http_version 1.1; \
        proxy_set_header Host $host; \
        proxy_set_header X-Real-IP $remote_addr; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80 443

CMD ["/docker-entrypoint.sh"]
